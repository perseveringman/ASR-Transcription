    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ESNext",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "react",
    "strict": true,
    "skipLibCheck": true,
    "lib": [
      "DOM",
      "ESNext"
    ]
  },
  "include": [
    "src/**/*.ts"
  ]
